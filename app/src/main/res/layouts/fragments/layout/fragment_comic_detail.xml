        <android.support.constraint.Group
            android:id="@+id/comicDetailCreator2Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="comicDetailCreatorText2, comicDetailCreatorType2, comicDetailCreatorButton2"
