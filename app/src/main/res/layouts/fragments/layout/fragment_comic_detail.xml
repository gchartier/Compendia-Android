<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/comicDetailConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/comicDetailToolbar"
            layout="@layout/detail_toolbar" />

        <android.support.constraint.Guideline
            android:id="@+id/comicDetailGuidelineLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <android.support.constraint.Guideline
            android:id="@+id/comicDetailGuidelineCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="138dp" />

        <ImageView
            android:id="@+id/comicDetailCover"
            android:layout_width="122dp"
            android:layout_height="185dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/content_description_comic_detail_cover"
            android:src="@drawable/gideon_falls"
            app:layout_constraintStart_toStartOf="@+id/comicDetailGuidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailToolbar" />

        <TextView
            android:id="@+id/comicDetailTitle"
            style="@style/detail_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/comicDetailGuidelineCover"
            app:layout_constraintTop_toTopOf="@+id/comicDetailCover"
            tools:text="Gideon Falls #1" />

        <TextView
            android:id="@+id/comicDetailPublisher"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailPublisherImprintSeparator"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/comicDetailTitle"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailTitle"
            tools:text="Image Comics" />

        <ImageView
            android:id="@+id/comicDetailPublisherImprintSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/comicDetailPublisher"
            android:baselineAlignBottom="true"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailPublisher"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailImprint"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/comicDetailPublisher"
            app:layout_constraintTop_toTopOf="@+id/comicDetailPublisher"
            app:srcCompat="@drawable/ic_remove_black_24dp" />

        <TextView
            android:id="@+id/comicDetailImprint"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailPublisherImprintSeparator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/comicDetailPublisherImprintSeparator"
            app:layout_constraintTop_toTopOf="@+id/comicDetailPublisherImprintSeparator"
            tools:text="Skybound" />

        <TextView
            android:id="@+id/comicDetailCoverDate"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailDatePriceSeparator"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/comicDetailPublisher"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailPublisher"
            tools:text="April 3rd, 2019" />

        <ImageView
            android:id="@+id/comicDetailDatePriceSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailCoverDate"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailCoverPrice"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/comicDetailCoverDate"
            app:layout_constraintTop_toTopOf="@+id/comicDetailCoverDate"
            app:srcCompat="@drawable/detail_separator" />

        <TextView
            android:id="@+id/comicDetailCoverPrice"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailDatePriceSeparator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/comicDetailDatePriceSeparator"
            app:layout_constraintTop_toTopOf="@+id/comicDetailDatePriceSeparator"
            tools:text="$5.99" />

        <TextView
            android:id="@+id/comicDetailFormat"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailFormatAgeSeparator"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/comicDetailCover"
            app:layout_constraintStart_toStartOf="@+id/comicDetailCoverDate"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailCoverDate"
            tools:text="Single Issue" />

        <ImageView
            android:id="@+id/comicDetailFormatAgeSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailFormat"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailAge"
            app:layout_constraintStart_toEndOf="@+id/comicDetailFormat"
            app:layout_constraintTop_toTopOf="@+id/comicDetailFormat"
            app:srcCompat="@drawable/detail_separator" />

        <TextView
            android:id="@+id/comicDetailAge"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailFormatAgeSeparator"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailAgeRatingSeparator"
            app:layout_constraintStart_toEndOf="@+id/comicDetailFormatAgeSeparator"
            app:layout_constraintTop_toTopOf="@+id/comicDetailFormatAgeSeparator"
            tools:text="Modern Age" />

        <ImageView
            android:id="@+id/comicDetailAgeRatingSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailAge"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailAgeRating"
            app:layout_constraintStart_toEndOf="@+id/comicDetailAge"
            app:layout_constraintTop_toTopOf="@+id/comicDetailAge"
            app:srcCompat="@drawable/detail_separator" />

        <TextView
            android:id="@+id/comicDetailAgeRating"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailAgeRatingSeparator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/comicDetailAgeRatingSeparator"
            app:layout_constraintTop_toTopOf="@+id/comicDetailAgeRatingSeparator"
            tools:text="MA" />

        <TextView
            android:id="@+id/comicDetailOtherVersionText"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailOtherVersionArrow"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/comicDetailCover"
            app:layout_constraintStart_toStartOf="@+id/comicDetailFormat"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailFormat"
            tools:text="1 Other Version(s)" />

        <ImageView
            android:id="@+id/comicDetailOtherVersionArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_comic_detail_other_versions"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailOtherVersionText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/comicDetailOtherVersionText"
            app:layout_constraintTop_toTopOf="@+id/comicDetailOtherVersionText"
            app:srcCompat="@drawable/navigate_in" />

        <TextView
            android:id="@+id/comicDetailReviewHeader"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/common_user_rating_header"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailUserRating"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/comicDetailOtherVersionText"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailOtherVersionText" />

        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/comicDetailUserRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:importantForAccessibility="yes"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailReviewHeader"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailHasReadIcon"
            app:layout_constraintStart_toEndOf="@+id/comicDetailReviewHeader"
            app:layout_constraintTop_toTopOf="@+id/comicDetailReviewHeader"
            app:srb_borderColor="@color/colorPrimary"
            app:srb_fillColor="@color/colorPrimary"
            app:srb_numberOfStars="5"
            app:srb_rating="0"
            app:srb_starSize="20dp"
            app:srb_stepSize="0.5" />

        <ImageView
            android:id="@+id/comicDetailHasReadIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/content_description_comic_detail_have_read"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/comicDetailUserRating"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailInCollectionIcon"
            app:layout_constraintStart_toEndOf="@+id/comicDetailUserRating"
            app:layout_constraintTop_toTopOf="@+id/comicDetailUserRating"
            app:srcCompat="@drawable/ic_check_black_24dp"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/comicDetailInCollectionIcon"
            android:layout_width="23dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/content_description_comic_detail_in_collection"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailHasReadIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/comicDetailHasReadIcon"
            app:layout_constraintTop_toTopOf="@+id/comicDetailHasReadIcon"
            app:srcCompat="@drawable/ic_collection"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/comicDetailAvgReviewText"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailRatingReviewSeparator"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/comicDetailReviewHeader"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailReviewHeader"
            tools:text="Avg. 3.5" />

        <ImageView
            android:id="@+id/comicDetailRatingReviewSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailAvgReviewText"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailReviewsText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/comicDetailAvgReviewText"
            app:layout_constraintTop_toTopOf="@+id/comicDetailAvgReviewText"
            app:srcCompat="@drawable/detail_separator" />

        <TextView
            android:id="@+id/comicDetailReviewsText"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailRatingReviewSeparator"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailReviewsButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/comicDetailRatingReviewSeparator"
            app:layout_constraintTop_toTopOf="@+id/comicDetailRatingReviewSeparator"
            tools:text="12 Reviews" />

        <ImageView
            android:id="@+id/comicDetailReviewsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/content_description_reviews_button"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailReviewsText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/comicDetailReviewsText"
            app:layout_constraintTop_toTopOf="@+id/comicDetailReviewsText"
            app:srcCompat="@drawable/navigate_in" />

        <View
            android:id="@+id/descriptionGradient"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/detail_gradient"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="@id/comicDetailDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/comicDetailDescription"
            style="@style/detail_text_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:maxLines="@integer/DESCRIPTION_MAX_LINES"
            android:minLines="1"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/comicDetailGuidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailAvgReviewText"
            tools:text="A brand-new ongoing series from the acclaimed bestselling creative team of Old Man Logan and Green Arrow! The lives of a reclusive young man obsessed with a conspiracy in the city's trash, and a washed-up Catholic priest arriving in a small town full of dark secrets, become intertwined around the mysterious legend of The Black Barn, an otherworldly building that is alleged to have appeared in both the city and the small town, throughout history, bringing death and madness in its wake.   Rural mystery and urban horror collide in this character-driven meditation on obsession, mental illness, and faith." />

        <View
            android:id="@+id/comicDetailDescriptionCreatorsContentDivider"
            style="@style/Divider"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comicDetailDescription" />

        <TextView
            android:id="@+id/comicDetailCreatorsHeader"
            style="@style/detail_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/comic_detail_creators_header"
            app:layout_constraintStart_toStartOf="@+id/comicDetailGuidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailDescriptionCreatorsContentDivider" />

        <TextView
            android:id="@+id/comicDetailSeeAllCreatorsText"
            style="@style/detail_text_2_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/comic_detail_see_all_creators_text"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailSeeAllCreatorsButton"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailDescriptionCreatorsContentDivider" />

        <ImageView
            android:id="@+id/comicDetailSeeAllCreatorsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/content_description_comic_detail_see_all_creators"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailSeeAllCreatorsText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/comicDetailSeeAllCreatorsText"
            app:srcCompat="@drawable/navigate_in" />

        <TextView
            android:id="@+id/comicDetailCreatorText1"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailCreatorButton1"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailCreatorsHeader"
            tools:text="Jeff Lemire" />

        <TextView
            android:id="@+id/comicDetailCreatorType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/comicDetailCreatorText1"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailCreatorText1"
            tools:text="Writer, Artist, Penciler, Inker" />

        <ImageView
            android:id="@+id/comicDetailCreatorButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_comic_detail_creator_button"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailCreatorText1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/comicDetailCreatorText1"
            app:layout_constraintTop_toTopOf="@+id/comicDetailCreatorText1"
            app:srcCompat="@drawable/navigate_in" />

        <TextView
            android:id="@+id/comicDetailCreatorText2"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailCreatorButton2"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/comicDetailCreator1Barrier"
            app:layout_constraintTop_toTopOf="@id/comicDetailCreatorText1"
            tools:text="Brian K. Vaughan" />

        <TextView
            android:id="@+id/comicDetailCreatorType2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/comicDetailCreatorType1"
            app:layout_constraintStart_toStartOf="@+id/comicDetailCreatorText2"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailCreatorText2"
            tools:text="Writer, Artist" />

        <ImageView
            android:id="@+id/comicDetailCreatorButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_comic_detail_creator_button"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailCreatorText2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/comicDetailCreatorText2"
            app:layout_constraintTop_toTopOf="@+id/comicDetailCreatorText2"
            app:srcCompat="@drawable/navigate_in" />

        <TextView
            android:id="@+id/comicDetailCreatorText3"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailCreatorButton3"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comicDetailCreatorType1"
            tools:text="Mark Craig Armstrong" />

        <TextView
            android:id="@+id/comicDetailCreatorType3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/comicDetailCreatorText3"
            app:layout_constraintTop_toBottomOf="@+id/comicDetailCreatorText3"
            tools:text="Artist, Cover Artist" />

        <ImageView
            android:id="@+id/comicDetailCreatorButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_comic_detail_creator_button"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailCreatorText3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/comicDetailCreatorText3"
            app:layout_constraintTop_toTopOf="@+id/comicDetailCreatorText3"
            app:srcCompat="@drawable/navigate_in" />

        <TextView
            android:id="@+id/comicDetailCreatorText4"
            style="@style/detail_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/comicDetailCreatorButton4"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/comicDetailCreator3Barrier"
            app:layout_constraintTop_toTopOf="@id/comicDetailCreatorText3"
            tools:text="Jeff Lemire" />

        <TextView
            android:id="@+id/comicDetailCreatorType4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailCreatorType3"
            app:layout_constraintStart_toStartOf="@+id/comicDetailCreatorText4"
            tools:text="Writer, Artist" />

        <ImageView
            android:id="@+id/comicDetailCreatorButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description_comic_detail_creator_button"
            app:layout_constraintBottom_toBottomOf="@+id/comicDetailCreatorText4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/comicDetailCreatorText4"
            app:layout_constraintTop_toTopOf="@+id/comicDetailCreatorText4"
            app:srcCompat="@drawable/navigate_in" />

        <TextView
            android:id="@+id/comicDetailNoCreators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comic_detail_no_creators"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/comicDetailCreatorsCollectionContentDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comicDetailCreatorsHeader" />

        <android.support.constraint.Group
            android:id="@+id/comicDetailCreator1Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="comicDetailCreatorText1, comicDetailCreatorType1, comicDetailCreatorButton1"
