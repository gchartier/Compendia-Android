<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/settings_toolbar"
        layout="@layout/detail_toolbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="53dp" />

    <ImageView
        android:id="@+id/support_help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description_settings_support_help"
        app:layout_constraintBottom_toBottomOf="@+id/support_help_text"
        app:layout_constraintStart_toEndOf="@+id/support_help_text"
        app:layout_constraintTop_toTopOf="@+id/support_help_text"
        app:srcCompat="@drawable/navigate_in" />

    <Button
        android:id="@+id/log_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/account_log_out"
        app:layout_constraintStart_toStartOf="@+id/account_username_text"
        app:layout_constraintTop_toBottomOf="@+id/account_username_text" />

    <Button
        android:id="@+id/change_password_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Change Password"
        app:layout_constraintBottom_toBottomOf="@+id/log_out_button"
        app:layout_constraintStart_toEndOf="@+id/log_out_button"
        app:layout_constraintTop_toTopOf="@+id/log_out_button" />

    <TextView
        android:id="@+id/settings_account_header"
        style="@style/detail_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/account_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_toolbar" />

    <TextView
        android:id="@+id/settings_legal_info_header"
        style="@style/detail_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/legal_header"
        app:layout_constraintStart_toStartOf="@+id/log_out_button"
        app:layout_constraintTop_toBottomOf="@+id/log_out_button" />

    <TextView
        android:id="@+id/settings_support_header"
        style="@style/detail_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/support_header"
        app:layout_constraintStart_toStartOf="@+id/legal_terms_of_service_text"
        app:layout_constraintTop_toBottomOf="@+id/legal_terms_of_service_text" />

    <TextView
        android:id="@+id/account_username_text"
        style="@style/detail_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/account_username_text"
        app:layout_constraintStart_toStartOf="@+id/settings_account_header"
        app:layout_constraintTop_toBottomOf="@+id/settings_account_header" />

    <TextView
        android:id="@+id/legal_privacy_policy_text"
        style="@style/detail_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/legal_privacy_policy_text"
        app:layout_constraintStart_toStartOf="@+id/settings_legal_info_header"
        app:layout_constraintTop_toBottomOf="@+id/settings_legal_info_header" />

    <TextView
        android:id="@+id/support_help_text"
        style="@style/detail_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/support_help_text"
        app:layout_constraintStart_toStartOf="@+id/settings_support_header"
        app:layout_constraintTop_toBottomOf="@+id/settings_support_header" />

    <TextView
        android:id="@+id/support_contact_us_text"
        style="@style/detail_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/support_contact_us_text"
        app:layout_constraintStart_toStartOf="@+id/support_help_text"
        app:layout_constraintTop_toBottomOf="@+id/support_help_text" />

    <TextView
        android:id="@+id/support_about_text"
        style="@style/detail_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/support_about_text"
        app:layout_constraintStart_toStartOf="@+id/support_contact_us_text"
        app:layout_constraintTop_toBottomOf="@+id/support_contact_us_text" />

    <TextView
        android:id="@+id/support_donate_text"
        style="@style/detail_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/support_donate_text"
        app:layout_constraintStart_toStartOf="@+id/support_about_text"
        app:layout_constraintTop_toBottomOf="@+id/support_about_text" />

    <TextView
        android:id="@+id/legal_terms_of_service_text"
        style="@style/detail_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/legal_terms_of_service_text"
        app:layout_constraintStart_toStartOf="@+id/legal_privacy_policy_text"
        app:layout_constraintTop_toBottomOf="@+id/legal_privacy_policy_text" />

    <TextView
        android:id="@+id/account_username_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/account_username_text"
        app:layout_constraintStart_toEndOf="@+id/account_username_text"
        app:layout_constraintTop_toTopOf="@+id/account_username_text"
        tools:text="ShowMeTheBread" />

    <TextView
        android:id="@+id/settings_copyright_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/settings_copyright_text"
        app:layout_constraintBottom_toTopOf="@+id/settings_version_info"
        app:layout_constraintEnd_toEndOf="@+id/settings_version_info"
        app:layout_constraintStart_toStartOf="@+id/settings_version_info" />

    <TextView
        android:id="@+id/settings_version_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/settings_version_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/legal_privacy_policy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description_legal_privacy_policy"
        app:layout_constraintBottom_toBottomOf="@+id/legal_privacy_policy_text"
        app:layout_constraintStart_toEndOf="@+id/legal_privacy_policy_text"
        app:layout_constraintTop_toTopOf="@+id/legal_privacy_policy_text"
        app:srcCompat="@drawable/navigate_in" />

    <ImageView
        android:id="@+id/legal_terms_of_service_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description_legal_terms_of_service"
        app:layout_constraintBottom_toBottomOf="@+id/legal_terms_of_service_text"
        app:layout_constraintStart_toEndOf="@+id/legal_terms_of_service_text"
        app:layout_constraintTop_toTopOf="@+id/legal_terms_of_service_text"
        app:srcCompat="@drawable/navigate_in" />

    <ImageView
        android:id="@+id/support_about_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description_settings_support_about"
        app:layout_constraintBottom_toBottomOf="@+id/support_about_text"
        app:layout_constraintStart_toEndOf="@+id/support_about_text"
        app:layout_constraintTop_toTopOf="@+id/support_about_text"
        app:srcCompat="@drawable/navigate_in" />

    <ImageView
        android:id="@+id/support_donate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description_settings_support_donate"
        app:layout_constraintBottom_toBottomOf="@+id/support_donate_text"
        app:layout_constraintStart_toEndOf="@+id/support_donate_text"
        app:layout_constraintTop_toTopOf="@+id/support_donate_text"
        app:srcCompat="@drawable/navigate_in" />

    <ImageView
        android:id="@+id/support_contact_us_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description_settings_support_contact"
        app:layout_constraintBottom_toBottomOf="@+id/support_contact_us_text"
        app:layout_constraintStart_toEndOf="@+id/support_contact_us_text"
        app:layout_constraintTop_toTopOf="@+id/support_contact_us_text"
        app:srcCompat="@drawable/navigate_in" />

</androidx.constraintlayout.widget.ConstraintLayout>